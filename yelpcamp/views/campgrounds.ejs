<%include partials/header%>
<div class="container">
    <div class="jumbotron">
        <h1>Welcome to Yelpcamp</h1>
        <div>Your home for all the coolest campsites, also ponies</div><br>
        <a class="btn btn-primary" href="/campgrounds/new/">Add a new campground</a>
    </div>
        <div class="card-deck">
<% campgrounds.forEach(function(campground) { %>
<div class="col-md-3 col-sm-6">
    <a href="/campgrounds/<%=campground._id%>">
    <div class="card">
        <div class="card-body">
        <h4 class="card-title text-center"><%=campground.name%></h4>
    <img class="card-img-bottom" src="<%=campground.img_url%>"></div>
    <div class="card-text text-center"><%=campground.description%></div>
    </div>
    </div>
    </a>
<% });%>
</div>
</div>
<%include partials/footer%>