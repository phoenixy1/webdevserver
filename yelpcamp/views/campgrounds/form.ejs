<%include ../partials/header%>
<div class="container">
<h1>Make a new campsite</h1>
  <div class="form-group mt-4">
<form action = "/campgrounds" method="POST" style="width: 30%">
    <input type = "text" name = "name" id="name" class="form-control mb-2" placeholder="campground name">
    <input type = "text" name = "url" id="url" class="form-control mb-2" placeholder="image url">
    <input type = "text" name = "description" class="form-control" placeholder="campground description">
    <div class="text-center">
    <input type = "submit" class="form-control mt-4 btn btn-primary" style="width: 60%">
    </div>
</form>
</div>
</div>
