<%include partials/header%>
<div class="ui main text container segment bodycontainer">
    <div class="ui huge header">
        New Post
    </div>
    <form action="/posts" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
          <input type="text" placeholder = "Blog post title" name="post[title]">
          </div>
        <div class="field">
            <label>Body</label>
            <textarea name="post[body]" placeholder="Blog post text"></textarea>
        </div>
        <div class="field">
            <label>Author</label>
        <input type="text" placeholder = "Author name" name="post[author]">
        </div>
        <div>
        <input type="submit" class="button basic ui teal">
        </div>
        </form>
</div>
<%include partials/footer%>